{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server/index.ts",
    "build:frontend": "vite build --outDir dist/frontend",
    "build:backend": "esbuild server/index.ts --bundle --platform=node --format=esm --outfile=dist/backend/index.js --external:lightningcss",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "cross-env NODE_ENV=production node dist/backend/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "express": "^4.21.2",
    "ws": "^8.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@tanstack/react-query": "^5.60.5",
    "wouter": "^3.3.5",
    "clsx": "^2.1.1",
    "framer-motion": "^11.13.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "memorystore": "^1.6.7",
    "connect-pg-simple": "^10.0.0",
    "drizzle-orm": "^0.39.1",
    "zod": "^3.24.2",
    "date-fns": "^3.6.0",
    "react-hook-form": "^7.55.0",
    "react-icons": "^5.4.0",
    "@radix-ui/react-toast": "^1.2.7"
  },
  "devDependencies": {
    "typescript": "5.6.3",
    "vite": "^7.1.4",
    "@vitejs/plugin-react": "^4.7.0",
    "cross-env": "^10.0.0",
    "tsx": "^4.19.1",
    "esbuild": "^0.25.0",
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "@tailwindcss/vite": "^4.1.3",
    "@babel/preset-typescript": "^7.27.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  },
  "engines": {
    "node": "20.x"
  }
}
